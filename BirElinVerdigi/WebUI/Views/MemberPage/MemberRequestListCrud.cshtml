@model WebUI.Models.AdViewModel
@{
    Layout = "_Layout";

}

<section id="contact" class="section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <h3>İSTEKLERİM</h3>
            <p>Buradan istek attığınız ilanları ve ilanlarınıza atılmış istekleri görüntüleyebilirsiniz.</p>
        </div>
    </div>
</section>
<br />
<br />

<div class="row">

    <div class=" col-md-1 ">
    </div>

    <div class=" col-md-5 ">

        <div class="left">
            <h4>Benim isteklerim</h4>
            <table class="table table-bordered">
                <thead>

                    <tr>
                        @*<th scope="col">#</th>*@

                        <th scope="col"> Ad-Soyad</th>
                        <th scope="col">Mail Adres</th>
                        <th scope="col">İlan Başlık</th>
                        <th scope="col">Kategori Adı</th>
                        <th scope="col">Şehir</th>
                        <th scope="col">İlan Bigisi</th>
                        <th scope="col">İstek Durum </th>
                        <th scope="col">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.AdInfo != null)
                    {
                        @foreach (var item in Model.AdInfo)
                        {
                            @if (item.RequestMemberID == Model.MemberID)
                            {
                                <tr>
                                    @*<th scope="row">@i</th>*@

                                    <td>@item.MemberName @item.MemberSurname</td>
                                    <td>@item.MemberMail</td>
                                    <td>@item.AdTitle</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.CityName</td>
                                    <td>@item.AdInfo</td>
                                    <td>@item.RequestNameState</td>

                                    <td>
                                        <a class="btn btn-danger btn-sm" asp-controller="MemberPage" asp-action="MemberRequestCancel" asp-route-id="@item.RequestID">
                                            <i class="fas fa-trash-alt">
                                            </i>
                                            İptal Et
                                        </a>

                                        <a class="btn btn-info btn-sm" asp-controller="GeneralPage" asp-action="MemberRequestMessage" asp-route-id="@item.AdID">
                                            <i class="icofont-ui-message">
                                            </i>
                                            Mesaj
                                        </a>
                                    </td>

                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>
    <!-- **************** -->
    <div class=" col-md-5">
        <div class="right">
            <h4>Bana Gelen İstekler</h4>
            <table class="table table-bordered">
                <thead>

                    <tr>
                        @*<th scope="col">#</th>*@

                        <th scope="col">İlan Başlık</th>
                        <th scope="col"> Ad Soyad</th>
                        <th scope="col">Mail Adres</th>
                        <th scope="col">Kategori Adı</th>
                        <th scope="col">Şehir</th>
                        <th scope="col">İlan Bigisi</th>
                        <th scope="col">İstek Durum</th>
                        <th scope="col">İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.AdInfo != null)
                    {
                        @foreach (var item in Model.AdInfo)
                        {
                            @if (item.MemberID == Model.MemberID)
                            {
                                <tr>
                                    @*<th scope="row">1</th>*@

                                    <td>@item.MemberName @item.MemberSurname</td>
                                    <td>@item.MemberMail</td>
                                    <td>@item.AdTitle</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.CityName</td>
                                    <td>@item.AdInfo</td>
                                    <td>@item.RequestNameState</td>
                                    <td>
                                        <a class="btn btn-info btn-sm" asp-controller="MemberPage" asp-action="MemberRequestAccept" asp-route-id="@item.RequestID">
                                            <i class="fas fa-check-square">
                                            </i>
                                            kabul
                                        </a>
                                        <a class="btn btn-danger btn-sm" asp-controller="MemberPage" asp-action="MemberRequestReject" asp-route-id="@item.RequestID">
                                            <i class="fas fa-window-close">
                                            </i>
                                            red
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
    <div class=" col-md-1 ">
    </div>
</div>

<br />
<br />
<br />
<br />


    