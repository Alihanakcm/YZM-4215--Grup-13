@model List<Entity.Concrete.View_AdInfo>
@{
    Layout = "_Layout";
    ViewBag.Title = "Ilanlar";
}

<!-- ======= Portfolio Section ======= -->
<section id="portfolio" class="section-bg">
    <div class="container" data-aos="fade-up">

        <header class="section-header">
            <h3 class="section-title">İLANLAR</h3>
            <p>Buradan yayınlanan ilanları görüntüleyebilirsiniz.</p>
        </header>

