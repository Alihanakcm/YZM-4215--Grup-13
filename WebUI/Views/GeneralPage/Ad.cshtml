@if (Model != null)
{
    @foreach (var item in Model)
    {

        <div class="modal fade" id="infoAd_@item.AdID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">İlan İncele</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                        <div class="modal-body">
                            <div class="wrapper row">
                                <div class="preview col-md-6">

                                    <div class="preview-pic tab-content">
                                        @if (item.CategoryID == 1)
                                        {
                                            <div class="tab-pane active" id="pic-1"><img src="assets/img/portfolio/app1.jpg" /></div>
                                        }
                                        @if (item.CategoryID == 2)
                                        {
                                            <div class="tab-pane active" id="pic-1"><img src="~/img/stuff.jpg" /></div>
                                        }
                                        @if (item.CategoryID == 3)
                                        {
                                            <div class="tab-pane active" id="pic-1"><img src="~/img/pet.jpg" /></div>
                                        }
                                        @if (item.CategoryID == 4)
                                        {
                                            <div class="tab-pane active" id="pic-1"><img src="~/img/money.jpg" /></div>
                                        }
                                        @if (item.CategoryID == 5)
                                        {
                                            <div class="tab-pane active" id="pic-1"><img src="http://placekitten.com/400/252" /></div>
                                        }
                                        @if (item.CategoryID == 6)
                                        {
                                            <div class="tab-pane active" id="pic-1"><img src="http://placekitten.com/400/252" /></div>
                                        }
                                        @if (item.CategoryID == 7)
                                        {
                                            <div class="tab-pane active" id="pic-1"><img src="http://placekitten.com/400/252" /></div>
                                        }
                                        <p class="product-description">@item.MemberName @item.MemberSurname</p>
                                        <p class="product-description">@item.CityName</p>
                                    </div>

                                </div>
                                <div class="details col-md-6">
                                    <h3 class="product-title">@item.AdTitle</h3>
                                    <p class="product-description">@item.AdInfo</p>
                                </div>
                            </div>
                            <div class="wrapper row align-items-center">
                                <div class="action">
                                    <a class="add-to-cart btn btn-default" type="submit"  asp-controller="GeneralPage" asp-action="RequestNewAdMessage" asp-route-id="@item.AdID" >Mesaj Gönder</a>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    }
}