@model Entity.Concrete.Tbl_Member
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewData["Title"] - WebUI</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" /> @*SABİT*@


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" @*Slider*@
            crossorigin="anonymous">

    </script>

    <link href="~/css/svg-turkiye-haritasi.css" rel="stylesheet" /> @*Haritacssdosyası*@

    <!-- Custom fonts for this template -->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="vendor/simple-line-icons/css/simple-line-icons.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template -->
    <link href="css/landing-page.min.css" rel="stylesheet">


    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Montserrat:300,400,500,700" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/icofont/icofont.min.css" rel="stylesheet">
    <link href="assets/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="assets/vendor/ionicons/css/ionicons.min.css" rel="stylesheet">
    <link href="assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="assets/vendor/venobox/venobox.css" rel="stylesheet">
    <link href="assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="assets/vendor/aos/aos.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="assets/css/style.css" rel="stylesheet">




</head>
<body>
    <header>
        <!-- Navigation -->
        <nav class="navbar navbar-light bg-light static-top">
            <div class="container">
                <form class="form-inline my-2 my-lg-0" method="post">
                    @if (TempData["isLoggedIn"] != null)
                    {
                        <a class="navbar-brand" asp-controller="GeneralPage" asp-action="Index">Anasayfa</a>
                        <a class="navbar-brand" asp-controller="GeneralPage" asp-action="Ad"> İlanlar </a>
                        <a class="navbar-brand" asp-controller="GeneralPage" asp-action="About"> Hakkımızda </a>
                        <a class="navbar-brand" asp-controller="GeneralPage" asp-action="Contact"> İletişim </a>
                        <a class="navbar-brand" asp-controller="MemberPage" asp-action="MemberAdListCrud"> İlanlarım </a>
                        <a class="navbar-brand" asp-controller="MemberPage" asp-action="MemberRequestListCrud"> İsteklerim </a>
                        <input type="submit" class="btn btn-danger btn-round btn-ouutline-success" value="Çıkış Yap" asp-controller="GeneralPage" asp-action="Logout" />
                    }
                    else
                    {
                        <a class="navbar-brand" asp-controller="GeneralPage" asp-action="Index">Anasayfa</a>
                        <a class="navbar-brand" asp-controller="GeneralPage" asp-action="Ad"> İlanlar </a>
                        <a class="navbar-brand" asp-controller="GeneralPage" asp-action="About"> Hakkımızda </a>
                        <a class="navbar-brand" asp-controller="GeneralPage" asp-action="Contact"> İletişim </a>
                        <a class="btn btn-success btn-round btn-ouutline-success float-right" data-toggle="modal" data-target="#login" id="girisButon">
                            Giriş Yap
                        </a>
                    }
                </form>
            </div>
        </nav>

        <!-- Modal1-->
        <div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="login"
             aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="card">
                            <img src="~/img/foto1.jpg" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h3 class="card-title">Giriş Yap</h3>
                                <form asp-controller="GeneralPage" asp-action="SignInUser" method="post">
                                    <div class="form-label-group">
                                        <input asp-for="IDNumber " class="form-control" type="text" placeholder="Kullanıcı TC Numarası" name="IDNumber" required>
                                    </div>
                                    <br />
                                    <div class="form-label-group">
                                        <input asp-for="MemberPassword" class="form-control" type="password" placeholder="Şifre" name="MemberPassword" required>
                                    </div>
                                    <br />
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="text-right col-md">
                                                <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#signin">
                                                    Kayıt Ol
                                                </button>
                                                <input class="btn btn--radius btn-success" type="submit" id="girisYap" value="Giriş Yap">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal 2 -->
        <div class="modal fade" id="signin" tabindex="-1" role="dialog" aria-labelledby="signin"
             aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="container">

                            <div class="row">
                                <div class="col">
                                    <form asp-controller="GeneralPage" asp-action="MemberRecord" method="post">

                                        <div class="form-group">
                                            <label asp-for="IDNumber" for="kullaniciAdi">Kullanıcı Tc Bilgisi:</label>
                                            <input asp-for="IDNumber" type="text" class="form-control" id="kullaniciAdi" placeholder="Tc Bilgisi" required name="IDNumber">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="MemberName" for="firstName">Ad :</label>
                                            <input asp-for="MemberName" type="text" class="form-control form-control" id="firstName" placeholder="Ad" required name="MemberName">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="MemberSurname" for="lastName">Soyad:</label>
                                            <input asp-for="MemberSurname" type="text" class="form-control" id="lastName" placeholder="Soyad" required name="MemberSurname">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="MemberMail" for="email">Eposta:</label>
                                            <input asp-for="MemberMail" type="email" class="form-control" id="email" placeholder="E-Posta" required name="MemberMail">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="MemberPassword" for="password">Şifre:</label>
                                            <input asp-for="MemberPassword" type="password" class="form-control" id="password" placeholder="Şifre" required name="MemberPassword">
                                        </div>

                                        <button type="submit" class="btn btn-primary btn-rounded" value="kayıtEkle">Kayıt Ol</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </header>
        @RenderBody()
        <!-- Footer -->
        <footer class="footer bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 h-100 text-center text-lg-left my-auto">
                        <ul class="list-inline mb-2">
                            <li class="list-inline-item">
                                <a asp-controller="GeneralPage" asp-action="About">Hakkımızda</a>
                            </li>
                            <li class="list-inline-item">&sdot;</li>
                            <li class="list-inline-item">
                                <a asp-controller="GeneralPage" asp-action="Contact">İletişim</a>
                            </li>
                            @*<li class="list-inline-item">&sdot;</li>
                                <li class="list-inline-item">
                                    <a href="#">Terms of Use</a>
                                </li>
                                <li class="list-inline-item">&sdot;</li>
                                <li class="list-inline-item">
                                    <a href="#">Privacy Policy</a>
                                </li>*@
                        </ul>
                        <p class="text-muted small mb-4 mb-lg-0">&copy; Your Website 2020. All Rights Reserved.</p>
                    </div>
                    <div class="col-lg-6 h-100 text-center text-lg-right my-auto">
                        <ul class="list-inline mb-0">
                            <li class="list-inline-item mr-3">
                                <a href="#">
                                    <i class="fab fa-facebook fa-2x fa-fw"></i>
                                </a>
                            </li>
                            <li class="list-inline-item mr-3">
                                <a href="#">
                                    <i class="fab fa-twitter-square fa-2x fa-fw"></i>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="#">
                                    <i class="fab fa-instagram fa-2x fa-fw"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>


        <script src="~/js/svg-turkiye-haritasi.js"></script> @*HaritajsDosyası*@
        <!-- SVG Türkiye Haritası -->
        <script>
            svgturkiyeharitasi();
        </script>

        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script> @*SABİT*@
        <script src="~/lib/jquery/dist/jquery.js"></script> @*SABİT*@



        <!-- Vendor JS Files -->
        <script src="assets/vendor/jquery/jquery.min.js"></script>
        <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="assets/vendor/jquery.easing/jquery.easing.min.js"></script>
        <script src="assets/vendor/php-email-form/validate.js"></script>
        <script src="assets/vendor/waypoints/jquery.waypoints.min.js"></script>
        <script src="assets/vendor/counterup/counterup.min.js"></script>
        <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
        <script src="assets/vendor/venobox/venobox.min.js"></script>
        <script src="assets/vendor/owl.carousel/owl.carousel.min.js"></script>
        <script src="assets/vendor/aos/aos.js"></script>

        <!-- Template Main JS File -->
        <script src="assets/js/main.js"></script>
</body>
</html>
